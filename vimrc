syntax on
colorscheme desert
filetype plugin indent on
set nocompatible
set noerrorbells " gets rid of beeping sound
set columns=80
set textwidth=80
set showcmd
set showmode
set laststatus=2
set statusline=%.40F%=%m\ %Y\ Line:\ %3l/%L[%3p%%]
set nu
set scrolloff=5
set mouse=a
set mousehide
set ignorecase
set smartcase
set incsearch
set hlsearch
set showmatch
set expandtab
set tabstop=4
set autoindent
nnoremap ; :
nnoremap <space> zz
